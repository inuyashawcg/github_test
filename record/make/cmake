tptfs CMakeLists.txt - backup

set_property(DIRECTORY PROPERTY INCLUDE_DIRECTORIES ${CMAKE_CURRENT_SOURCE_DIR})
include_directories(${CMAKE_SOURCE_DIR}/contrib/llvm-project/libcxx/include)
include_directories(${CMAKE_SOURCE_DIR}/sys)
include_directories(${CMAKE_SOURCE_DIR}/include)
include_directories(${CMAKE_SOURCE_DIR}/sys/sys)
include_directories(${KERNEL_MACHINE_PATH}/include)
include_directories(${CMAKE_SOURCE_DIR}/sys/net)
include_directories(${CMAKE_BINARY_DIR}/sys)
include_directories(${CMAKE_SOURCE_DIR}/lib/libc/include)
include_directories(${CMAKE_SOURCE_DIR}/sys/contrib/ck/include)
include_directories(${CMAKE_CURRENT_SOURCE_DIR}/dev)

aux_source_directory(${CMAKE_CURRENT_SOURCE_DIR}/dev dev)
aux_source_directory(${CMAKE_CURRENT_SOURCE_DIR} tptfs)
add_library(tptfs STATIC ${tptfs} ${dev})